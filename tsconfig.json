{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "pages/**/*.js",
    "pages/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests-examples/**/*.js",
    "utils/**/*.ts",
    "playwright.config.js",
    "playwright.config.ts"
  ]
}


